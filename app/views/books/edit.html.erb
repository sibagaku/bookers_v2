<h1>Editing Book</h1>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  <% if @book.errors.any? %>
  <div id="error_explanation" class="new_book">
    <h3>
      <% if @book.errors.count == 1 %>
        <%= @book.errors.count %> error prohibited this book from being saved:
      <% else %>
        <%= @book.errors.count %> errors prohibited this book from being saved:
      <% end %>
    </h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  
  <div class="form-group new_book">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title, class:"form" %>
  </div>

  <div class="form-group new_book">
    <%= f.label :body, "Body" %>
    <%= f.text_area :body, class:"form", rows:"5" %>
  </div>

  <div class="form-btn new_book">
    <%= f.submit "Update Book", class:"actions" %>
  </div>
<% end %>

<div class="new_book">
  <%= link_to "Show", book_path(@book.id) %>
  |
  <%= link_to "Back", books_path %>
</div>